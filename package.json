{
  "name": "@qavajs/playwright",
  "version": "4.0.0",
  "description": "steps to interact with playwright",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start:server": "ts-node test-e2e/support/server.ts",
    "install:browsers": "playwright install",
    "debug:e2e": "playwright test --config test-e2e/playwright.config.ts --ui",
    "debug:e2e:electron": "playwright test --config test-e2e/playwright.electron.config.ts --ui",
    "test:e2e": "playwright test --config test-e2e/playwright.e2e.config.ts",
    "test:e2e:electron": "playwright test --config test-e2e/playwright.electron.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qavajs/playwright.git"
  },
  "authors": [
    "Alexandr Galichenko"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qavajs/playwright/issues"
  },
  "homepage": "https://github.com/qavajs/playwright#readme",
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.1",
    "electron": "^40.2.1",
    "express": "^5.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@playwright/test": "^1.58.2",
    "@qavajs/playwright-runner-adapter": "^1.10.0",
    "@qavajs/memory": "^1.10.3"
  }
}
